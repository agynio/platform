{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "outDir": "build-ts",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@agyn/shared": ["../shared/src/index.ts"],
      "@agyn/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
