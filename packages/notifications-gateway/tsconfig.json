{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@agyn/shared": ["../shared/src/index.ts"],
      "@agyn/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
